#!/bin/bash

print_hline()
{
    local char="$1" times="$2"

    for ((i=0;i<=times;i++)); do 
        echo -n "${char}"
    done
    echo
}

print_delimiter()
{
    local filename="$1"
    print_hline "─" ${#filename}
    echo "${filename}"
    print_hline "─" ${#filename}
}

filename="$1"
toolname="$2"
toolname=${toolname:="bat"}

print_delimiter "${filename}"

if [[ "${toolname}" == "bat" && $(tput lines) -ge $(wc -l < "${filename}") ]]; then
    bat --color=always "${filename}"
else
    cat "${filename}"
fi
echo
print_delimiter "${filename}"
